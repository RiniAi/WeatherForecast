<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/margin_padding_16dp"
                android:layout_marginEnd="@dimen/margin_padding_16dp"
                android:layout_marginTop="@dimen/margin_padding_8dp"
                android:layout_marginBottom="@dimen/margin_padding_8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/fragment_day_ll_width"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding_8dp"
                        android:text="00째"
                        android:textSize="@dimen/text_size_title" />

                    <TextView
                        android:id="@+id/tv_temperature_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding_8dp"
                        android:text="00째/ 00째" />

                    <TextView
                        android:id="@+id/tv_description_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding_8dp"
                        android:text="Sunny"
                        android:textSize="@dimen/text_size_normal"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_temperature_feels_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding_8dp"
                        android:text="Feels like 00째" />

                    <TextView
                        android:id="@+id/tv_wind_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_padding_8dp"
                        android:text="Wind 00 KM/H ESE" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_image_weather"
                    android:layout_width="@dimen/fragment_day_size_of_main_image"
                    android:layout_height="@dimen/fragment_day_size_of_main_image"
                    android:layout_gravity="center"
                    android:src="@drawable/d_clear_sky" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/fragment_day_cv_width"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_padding_4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="@dimen/margin_padding_8dp"
                                android:text="Clouds" />

                            <TextView
                                android:id="@+id/tv_clouds"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/margin_padding_8dp"
                                android:text="0%"
                                android:textSize="@dimen/text_size_medium" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/fragment_day_cv_width"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_padding_4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="@dimen/margin_padding_8dp"
                                android:text="Humidity" />

                            <TextView
                                android:id="@+id/tv_humidity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/margin_padding_8dp"
                                android:text="0%"
                                android:textSize="@dimen/text_size_medium" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/fragment_day_cv_width"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_padding_4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="@dimen/margin_padding_8dp"
                                android:text="Pressure" />

                            <TextView
                                android:id="@+id/tv_pressure"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/margin_padding_8dp"
                                android:text="0,000 Mb"
                                android:textSize="@dimen/text_size_medium" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_time_of_day_forecast"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_padding_8dp"
                tools:layoutManager="LinearLayoutManager"
                tools:listitem="@layout/list_time_of_day_item" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
