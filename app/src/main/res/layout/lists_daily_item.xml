<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/margin_padding_16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_weekday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_padding_8dp"
                    android:text="MON" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_padding_8dp"
                    android:text="juli 3" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_image_weather"
                android:layout_width="@dimen/list_daily_size_main_image"
                android:layout_height="@dimen/list_daily_size_main_image"
                android:layout_marginEnd="@dimen/margin_padding_64dp"
                android:layout_gravity="center"
                android:src="@drawable/d_clear_sky" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_padding_16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_description_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_padding_8dp"
                    android:text="sunny" />

                <TextView
                    android:id="@+id/tv_wind_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_padding_8dp"
                    android:text="00 km/h" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_padding_8dp"
                    android:text="00°/00°" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/list_daily_size_crop_image"
                        android:layout_height="@dimen/list_daily_size_crop_image"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/margin_padding_8dp"
                        android:src="@drawable/not_drop" />

                    <TextView
                        android:id="@+id/tv_clouds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/margin_padding_8dp"
                        android:text="0%" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
