<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/margin_padding_8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding_8dp"
            android:gravity="center"
            android:text="00:00"/>

        <ImageView
            android:id="@+id/iv_image_weather"
            android:layout_width="@dimen/list_today_daily_size_main_image"
            android:layout_height="@dimen/list_today_daily_size_main_image"
            android:gravity="center"
            android:src="@drawable/d_clear_sky"/>

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding_8dp"
            android:gravity="center"
            android:text=" 00Â°"/>
    </LinearLayout>
</LinearLayout>
